{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./public/build",
        "rootDir": "./assets"
    },
    "include": [
        "assets/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}